doctype html
html

	head
		meta(charset='utf-8')
		title
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='shortcut icon', href='img/favicon.ico', type='image/x-icon')
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:400,700")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Archivo+Black")
		link(rel='stylesheet', href='css/style.css')
		style.
			*,
			*::after,
			*::before {
				//- outline: 1px solid rgba(255,0,0,.5) !important
			}
		script(src="http://ctr-localhost.ru/vlad/jq.js")

	body
		main.w-page
			.container
				article.recipe
					h1.recipe__title f
					.recipe__prepTime
						.prepTime(aria-label="Ready in 1 Hour 15 Minutes")
							time.prepTime__total(aria-hidden="true", datetime="15m") 15 m
							time.prepTime__prep(aria-hidden="true", datetime="1h 15m") 1h 15m
					.recipe__inner
						.recipe__ingredients
							section.ingredients
								h2.ingredients__title#ingredients-group
								ul.ingredients__list(aria-labelledby="ingredients-group")
									li.ingredients__item
										label.ingredients__name#i598(aria-label="2 Cucumbers") Cucumbers
											span.ingredients__amount(data-amount-type="other", aria-hidden="true") 2
											input(type="checkbox", aria-labelledby="i598").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i143(aria-label="1 teaspoon White sugar") White sugar
											span.ingredients__amount(data-amount-type="tsp", aria-hidden="true") 1 teaspoon
											input(type="checkbox", aria-labelledby="i143").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i531(aria-label="1 1/2 teaspons Salt") Salt
											span.ingredients__amount(data-amount-type="tsp", aria-hidden="true") 1 1/2 teaspons
											input(type="checkbox", aria-labelledby="i531").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i875(aria-label="2 cloves Garlic, finely crushed") Cloves garlic, finely crushed
											span.ingredients__amount(data-amount-type="other", aria-hidden="true") 2 cloves
											input(type="checkbox", aria-labelledby="i875").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i314(aria-label="2 tablespoons Seasoned rice vinegar") Seasoned rice vinegar
											span.ingredients__amount(data-amount-type="tbs", aria-hidden="true") 2 tablespoons
											input(type="checkbox", aria-labelledby="i314").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i633(aria-label="1 teaspoon Soy sauce") Soy sauce
											span.ingredients__amount(data-amount-type="tsp", aria-hidden="true") 1 teaspoon
											input(type="checkbox", aria-labelledby="i633").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i175(aria-label="1 teaspoon Sesame oil") Sesame oil
											span.ingredients__amount(data-amount-type="tsp", aria-hidden="true") 1 teaspoon
											input(type="checkbox", aria-labelledby="i175").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i111(aria-label="Red pepper flakes to taste") Red pepper flakes to taste
											input(type="checkbox", aria-labelledby="i111").ingredients__checkbox
									li.ingredients__item
										label.ingredients__name#i369(aria-label="2 teaspoons Toasted sesame seeds") Toasted sesame seeds
											span.ingredients__amount(data-amount-type="tsp", aria-hidden="true") 2 teaspoons
											input(type="checkbox", aria-labelledby="i369").ingredients__checkbox
						.recipe__directions
							section.directions
								h2.directions__title#directions-group
								ul.directions__list
									li.directions__step